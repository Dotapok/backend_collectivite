# Configuration du serveur
PORT=5000
NODE_ENV=development

# Configuration MongoDB
MONGODB_URI=mongodb://localhost:27017/dtc_ekani
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/dtc_ekani

# Configuration JWT
JWT_SECRET=Dtc2025
JWT_EXPIRES_IN=24h

# Configuration PKI
PKI_PRIVATE_KEY_PATH=./certs/private.pem
PKI_PUBLIC_KEY_PATH=./certs/public.pem

# Configuration des fichiers
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Configuration de sécurité
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuration des notifications
SOCKET_CORS_ORIGIN=http://localhost:3000

# Configuration CORS (optionnel - les origines sont définies dans server.js)
# ALLOWED_ORIGINS=http://localhost:3000,https://collectivite.up.railway.app,https://backendcollectivite.up.railway.app
